general {
        colors = true
        interval = 5
        color_good = "#FFFFFF"
        color_degraded = "#FF9933"
        color_bad = "#FF0033"
        color_separator = "#666666"
}

order += "wireless wlo1"
order += "ethernet enp61s0"
order += "path_exists vpn-ipvanish"
order += "cpu_usage"
